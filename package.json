{
  "name": "catalog-be",
  "version": "0.2.2",
  "description": "only used for versioning",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "release-it --ci"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "🔥 Features"
            },
            {
              "type": "fix",
              "section": "🪲 Bug Fixes"
            },
            {
              "type": "docs",
              "section": "📝 Documentation"
            },
            {
              "type": "refactor",
              "section": "📝 Refactors"
            },
            {
              "type": "perf",
              "section": "⚡ Performance Improvements"
            },
            {
              "type": "test",
              "section": "🧪 Tests"
            },
            {
              "type": "build",
              "section": "🛠️ Build System"
            },
            {
              "type": "ci",
              "section": "🏃 Continuous Integration"
            }
          ]
        },
        "infile": "CHANGELOG.md",
        "header": "# Changelog\n\nAll notable changes to this project will be documented in this file. See [Conventional Commits](https://www.conventionalcommits.org) for commit guidelines."
      }
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@release-it/conventional-changelog": "^8.0.1",
    "husky": "^9.0.11",
    "release-it": "^17.4.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/comimafun/catalog-api"
  }
}
